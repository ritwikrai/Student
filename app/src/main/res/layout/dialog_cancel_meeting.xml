<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey_border_box"
    android:orientation="vertical"
    android:padding="13dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:padding="7dp"
        android:text="Cancel Meet"
        android:textAppearance="?android:textAppearance"
        android:textColor="#8A8A8A" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Are you sure that you want to cancel the meet?"
        android:textAppearance="?android:textAppearance"
        android:textColor="#3B3B3B" />


    <TextView
        android:layout_width="match_parent"
        android:text="Selected time and date"
        android:layout_marginTop="13dp"
        android:textColor="#B6B6B6"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_meetDateTime"
        android:layout_width="match_parent"
        android:layout_marginTop="13dp"
        android:textColor="@color/chat_sent_blue"
        android:text="12/09/2017   21:09:00"
        android:textAppearance="?android:textAppearance"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/red_border_box"
        android:text="Cancel Meet"
        android:textAllCaps="false"
        android:textColor="#DB4C3F" />
</LinearLayout>
